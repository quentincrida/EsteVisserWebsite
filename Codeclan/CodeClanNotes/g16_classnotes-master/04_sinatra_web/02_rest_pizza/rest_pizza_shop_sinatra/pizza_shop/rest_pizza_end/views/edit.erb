<form action="/pizzas/<%= @order.id %>" method="POST">
  <label for="first-name">First Name:</label>
  <input type="text" id="first-name" name="first_name" value="<%= @order.first_name %>">

  <label for="last-name">Last Name:</label>
  <input type="text" id="last-name" name="last_name" value="<%=@order.last_name %>">

  <label for="pizza-topping">Topping:</label>
  <select name="topping" id="pizza-topping">
    <% for topping in @toppings %>
      <option <%= "selected" if @order.topping == topping %> value="<%= topping %>"> <%= topping %></option>
    <% end %>
  </select>

  <label for="order-quantity">Quantity:</label>
  <input type="number" id="order-quantity" name="quantity" value="<%= @order.quantity %>">

  <input type="submit" value="Order Pizza">

</form>
